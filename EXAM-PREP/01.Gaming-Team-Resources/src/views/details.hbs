<main id='details'>
  <section id='details-info'>
    <div class='game-image'>
      <img src='{{game.imageUrl}}' />
    </div>

    <div class='game-info'>
      <div class='game-text'>
        <h1 id='name'>{{game.name}}</h1>
        <h3 id='platform'>Platform: {{game.platform}}</h3>
        <p id='price'><span>Price: ${{game.price}}</span></p>
        <p id='genre'><span>Genre: Simulator</span></p>
        <p id='description'>{{game.description}}</p>
      </div>

      <div class='product-btn'>
        <!--Only for registered user and author of the publication -->
        {{#if isOwner}}
          <div class='author'>
            <a href='/details/{{game._id}}/edit' class='btn-edit'>Edit</a>
            <a href='/details/{{game._id}}/delete' class='btn-delete'>Delete</a>
          </div>
        {{/if}}
        {{#if isAuthenticated}}
          {{#unless isOwner}}
            <!-- Logged in user who has not yet buy this game code-->
            <a href='/details/{{game._id}}/buy' class='btn-buy'>Buy</a>
          {{/unless}}
        {{/if}}
        <!-- Logged in user who has already buy this game code-->
        <!-- <p class="buy-message">You have already bought this game</p> -->
      </div>
    </div>
  </section>
</main>