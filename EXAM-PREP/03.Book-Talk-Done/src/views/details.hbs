<section class='details-page'>
  <h1>Details</h1>
  <article class='details-card'>

    <article class='details-card-text'>
      <h2>Title:<br />{{book.title}}</h2>
      <h3>Author: {{book.author}}</h3>
      <h3>Stars: {{book.stars}}</h3>
      <h3>Genre: {{book.genre}}</h3>
      <h3>{{book.review}}</h3>

      <!-- If there is no registered user, do not display buttons-->
      <div class='buttons'>
        <!-- Only for registered user and author of the review -->
        {{#if isAuthenticated}}
          {{#if isOwner}}
            <a href='/details/{{book._id}}/edit' class='btn-edit'>Edit</a>
            <a href='/details/{{book._id}}/delete' class='btn-delete'>Delete</a>
          {{/if}}

          {{#unless isOwner}}
            {{#if isWished}}
              <!-- logged in user who has not yet wished book-->
              <p class='wish-pub'>You already added the book to your wish list</p>
            {{else}}
              <a href='/details/{{book._id}}/wish' class='btn-wish'>Wish to read</a>
            {{/if}}
          {{/unless}}
        {{/if}}
        <!-- logged in user who has already wished book-->
      </div>

    </article>

    <article class='details-card-image'>
      <img src='{{book.imageUrl}}' />
    </article>

  </article>
</section>