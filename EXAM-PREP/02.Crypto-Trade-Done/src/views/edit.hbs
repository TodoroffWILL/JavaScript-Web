<main>
  <!-- In case of error, you should display div with class "errorContainer" -->
  <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

  {{#if error}}
    <div>
      <div class='errorContainer'>
        <p>{{error}}</p>
      </div>
    </div>
  {{/if}}
  <section id='edit-container'>
    <div class='edit-container-info'>
      <h1>Edit Announcement</h1>
      <form method='post'>
        <label>Name:</label>
        <input type='text' id='name' name='name' value='{{crypto.name}}' />
        <label>Image:</label>
        <input
          type='text'
          id='image'
          name='imageUrl'
          value='{{crypto.imageUrl}}'
        />
        <label>Price:</label>
        <input type='number' id='price' name='price' value='{{crypto.price}}' />
        <label>Description:</label>
        <textarea
          name='description'
          id='description'
        >{{crypto.description}}</textarea>
        <label>Payment method:</label>
        <select id='payment' name='platform'>
          {{#each options}}
            {{#if selected}}
              <option value='{{title}}' selected>{{title}}</option>
            {{else}}
              <option value='{{title}}'>{{title}}</option>
            {{/if}}
          {{/each}}
        </select>
        <input type='submit' id='btn' value='EDIT' />
      </form>
    </div>
  </section>
</main>