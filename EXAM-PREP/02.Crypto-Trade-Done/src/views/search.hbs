<main>
  <section class='crypto-search'>
    <h1>Search</h1>

    <form class='search-form' action='/search' method='post'>
      <input
        type='text'
        class='search-coin'
        name='name'
        placeholder='Search here...'
      />
      <select id='payment' name='platform'>
        <option value='crypto-wallet'>Crypto Wallet</option>
        <option value='credit-card'>Credit Card</option>
        <option value='debit-card'>Debit Card</option>
        <option value='paypal'>PayPal</option>
      </select>
      <button type='submit' class='btn-search'>Search</button>
    </form>

    <div class='search-result'>
      <div class='search-list'>
        {{#each cryptos}}
          <div class='coin'>
            <div class='coin-img'>
              <img src='{{imageUrl}}' />
            </div>
            <div class='coin-info'>
              <h1>{{name}}</h1>
              <p><span>Price: </span>${{price}}</p>
              <p><span>Payment: </span>{{platform}}</p>
            </div>

            <a href='/details/{{_id}}' class='btn-details'>Details</a>
          </div>
        {{/each}}
        {{#if found}}
          {{#each found}}
            <div class='coin'>
              <div class='coin-img'>
                <img src='{{imageUrl}}' />
              </div>
              <div class='coin-info'>
                <h1>{{name}}</h1>
                <p><span>Price: </span>${{price}}</p>
                <p><span>Payment: </span>{{platform}}</p>
              </div>

              <a href='/details/{{_id}}' class='btn-details'>Details</a>
            </div>

          {{/each}}
        {{else}}
          <div class='no-match'>
            <p>No match was found!</p>
          </div>
        {{/if}}
      </div>

    </div>

  </section>
</main>