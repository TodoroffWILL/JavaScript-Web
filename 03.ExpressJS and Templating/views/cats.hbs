
{{#each cats}}
  <article>
    <h2>{{name}}</h2>
    <p>Cat: {{name}} is {{age}} years old</p>
  </article>
{{/each}}

<form method='post'>
  <label for='name'>Name</label>
  <input type='text' id='name' name='name' />
  <label for='age'>Age</label>
  <input type='number' id='age' name='age' />
  <input type='submit' value='Create' />
</form>