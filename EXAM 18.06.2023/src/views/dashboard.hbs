{{#if error}}
  <div>
    <div class='errorContainer'>
      <p>{{error}}</p>
    </div>
  </div>
{{/if}}


<main class='dashboard'>
  <section id='dashboard'>
    <h2>Animals in Need</h2>
    <ul class='card-wrapper'>
      <!-- Display a li with information about every post (if any)-->
      {{#if animals}}
        {{#each animals}}
          <li class='card'>
            <img src='{{imageUrl}}' />
            <p>
              <strong>Name: </strong><span class='name'>{{name}}</span>
            </p>
            <p>
              <strong>Location: </strong><span
                class='location'
              >{{location}}</span>
            </p>
            <p><strong>Need of:</strong><span
                class='need-of'
              >{{needs}}</span></p>
            <a class='details-btn' href='/details/{{_id}}'>Details</a>
          </li>
        {{/each}}
      {{else}}
        <div id='no-post'>
          <h2>There are no animals in need now! </h2>
        </div>
      {{/if}}

    </ul>

    <!-- Display an h2 if there are no posts -->
    <!-- -->
  </section>
</main>